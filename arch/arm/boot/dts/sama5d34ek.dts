/dts-v1/;
/include/ "sama5d3.dtsi"
/include/ "sama5d3cm.dtsi"

/ {
	model = "Atmel SAMA5D3-EK";
	compatible = "atmel,sama5ek", "atmel,sama5d3", "atmel,sama5";

	chosen {
		bootargs = "console=ttyS0,115200 mtdparts=atmel_nand:8M(bootstrap/uboot/kernel)ro,-(rootfs) rw rootfstype=ubifs ubi.mtd=1 root=ubi0:rootfs";
	};

	ahb {
		apb {
			dbgu: serial@ffffee00 {
				status = "okay";
			};

			mmc0: mmc@f0000000 {
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
					cd-gpios = <&pioD 17 0>;
				};
			};

			mmc1: mmc@f8000000 {
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
					cd-gpios = <&pioD 18 0>;
				};
			};

			macb0: ethernet@f0028000 {
				phy-mode = "rgmii";
				status = "okay";
			};

			lcd@f0030000 {
				status = "okay";
			};

			lcdovl1@f0030140 {
				status = "okay";
			};

			i2c0: i2c@f0014000 {
				status = "okay";
			};

			i2c1: i2c@f0018000 {
				status = "okay";
				24c256@50 {
					compatible = "24c256";
					reg = <0x50>;
					pagesize = <64>;
				};
			};

			/* Enable LCD or ISI not both */
			isi: isi@f0034000 {
				status = "disabled";
			};

			tsadcc: tsadcc@f8018000 {
				atmel,tsadcc_clock = <300000>;
				atmel,filtering_average = <0x03>;
				atmel,pendet_debounce = <0x08>;
				atmel,pendet_sensitivity = <0x02>;
				atmel,ts_sample_hold_time = <0x0a>;
				status = "okay";
			};
		};

		usb0: ohci@00600000 {
			status = "okay";
			num-ports = <3>;
			atmel,vbus-gpio = <&pioD 25 1
					   &pioD 26 1
					   &pioD 27 1
					  >;
		};

		usb1: ehci@00700000 {
			status = "okay";
		};

	};
};
